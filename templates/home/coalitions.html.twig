{% extends 'base.html.twig' %}

{% block title %}Coalitions - Jamaity{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">Coalitions</h1>
            <p class="lead text-muted">Découvrez les coalitions de la société civile tunisienne</p>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="GET" action="{{ path('app_coalitions') }}" class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Rechercher</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="{{ current_search }}" placeholder="Nom de la coalition...">
                        </div>
                        <div class="col-md-3">
                            <label for="region" class="form-label">Région</label>
                            <select class="form-select" id="region" name="region">
                                <option value="">Toutes les régions</option>
                                {% for region in regions %}
                                    <option value="{{ region }}" {{ current_region == region ? 'selected' : '' }}>
                                        {{ region }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="domaine" class="form-label">Domaine</label>
                            <select class="form-select" id="domaine" name="domaine">
                                <option value="">Tous les domaines</option>
                                {% for domaine in domaines %}
                                    <option value="{{ domaine }}" {{ current_domaine == domaine ? 'selected' : '' }}>
                                        {{ domaine }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>Filtrer
                            </button>
                            <a href="{{ path('app_coalitions') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Effacer
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    {{ total }} coalition{{ total > 1 ? 's' : '' }} trouvée{{ total > 1 ? 's' : '' }}
                    {% if current_region or current_domaine or current_search %}
                        <small class="text-muted">avec les filtres appliqués</small>
                    {% endif %}
                </h5>
                <div class="text-muted">
                    Page {{ current_page }} sur {{ total_pages }}
                </div>
            </div>
        </div>
    </div>

    <!-- Coalitions Grid -->
    {% if coalitions|length > 0 %}
        <div class="row">
            {% for coalition in coalitions %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        {% if coalition.logo %}
                            <img src="{{ asset('uploads/logos/' ~ coalition.logo) }}" 
                                 class="card-img-top" alt="{{ coalition.titre }}" 
                                 style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <i class="fas fa-users fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">{{ coalition.titre }}</h5>
                            
                            {% if coalition.abreviation %}
                                <p class="text-muted small mb-2">
                                    <strong>Abréviation:</strong> {{ coalition.abreviation }}
                                </p>
                            {% endif %}
                            
                            {% if coalition.description %}
                                <p class="card-text text-muted flex-grow-1">
                                    {{ coalition.description|length > 150 ? coalition.description|slice(0, 150) ~ '...' : coalition.description }}
                                </p>
                            {% endif %}
                            
                            <div class="mt-auto">
                                <div class="row text-center mb-3">
                                    {% if coalition.region %}
                                        <div class="col-6">
                                            <small class="text-muted d-block">Région</small>
                                            <span class="badge bg-secondary">{{ coalition.region }}</span>
                                        </div>
                                    {% endif %}
                                    {% if coalition.domaine %}
                                        <div class="col-6">
                                            <small class="text-muted d-block">Domaine</small>
                                            <span class="badge bg-info">{{ coalition.domaine }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="d-grid">
                                    <a href="{{ path('app_coalition_detail', {'slug': coalition.slug}) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>En savoir plus
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- No Results -->
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucune coalition trouvée</h4>
                    <p class="text-muted">Essayez de modifier vos critères de recherche</p>
                    <a href="{{ path('app_coalitions') }}" class="btn btn-primary">
                        <i class="fas fa-refresh me-1"></i>Voir toutes les coalitions
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Suggestion Block -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Vous ne trouvez pas ce que vous cherchez ?</h5>
                        <p class="card-text">Explorez d'autres sections de notre plateforme</p>
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <a href="{{ path('app_associations') }}" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-handshake me-1"></i>Associations
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a href="{{ path('app_opportunities') }}" class="btn btn-outline-success w-100">
                                    <i class="fas fa-briefcase me-1"></i>Opportunités
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a href="{{ path('app_actualites') }}" class="btn btn-outline-info w-100">
                                    <i class="fas fa-newspaper me-1"></i>Actualités
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Pagination -->
    {% if total_pages > 1 %}
        <div class="row mt-5">
            <div class="col-12">
                <nav aria-label="Pagination des coalitions">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Page -->
                        {% if current_page > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_coalitions', {
                                    'page': current_page - 1,
                                    'region': current_region,
                                    'domaine': current_domaine,
                                    'search': current_search
                                }) }}">
                                    <i class="fas fa-chevron-left"></i> Précédent
                                </a>
                            </li>
                        {% endif %}
                        
                        <!-- Page Numbers -->
                        {% for page in 1..total_pages %}
                            {% if page == current_page %}
                                <li class="page-item active">
                                    <span class="page-link">{{ page }}</span>
                                </li>
                            {% elseif page == 1 or page == total_pages or (page >= current_page - 2 and page <= current_page + 2) %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_coalitions', {
                                        'page': page,
                                        'region': current_region,
                                        'domaine': current_domaine,
                                        'search': current_search
                                    }) }}">{{ page }}</a>
                                </li>
                            {% elseif page == current_page - 3 or page == current_page + 3 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endfor %}
                        
                        <!-- Next Page -->
                        {% if current_page < total_pages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_coalitions', {
                                    'page': current_page + 1,
                                    'region': current_region,
                                    'domaine': current_domaine,
                                    'search': current_search
                                }) }}">
                                    Suivant <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    {% endif %}
</div>

<style>
.hover-shadow {
    transition: box-shadow 0.3s ease;
}

.hover-shadow:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.card-img-top {
    transition: transform 0.3s ease;
}

.card:hover .card-img-top {
    transform: scale(1.05);
}

.pagination .page-link {
    color: #0d6efd;
    border-color: #dee2e6;
}

.pagination .page-item.active .page-link {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.pagination .page-link:hover {
    color: #0a58ca;
    background-color: #e9ecef;
    border-color: #dee2e6;
}

.form-control:focus,
.form-select:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

@media (max-width: 768px) {
    .display-4 {
        font-size: 2rem;
    }
    
    .pagination {
        font-size: 0.875rem;
    }
    
    .card-body {
        padding: 1rem;
    }
}
</style>
{% endblock %}