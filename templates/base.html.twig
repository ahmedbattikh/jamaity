            :root {
                --primary-color: #3d57a2;
                --secondary-color: #f4ede9;
                --accent-color: #f59e0b;
                --text-dark: #1e293b;
                --text-light: #64748b;
                --border-color: #e2e8f0;
                --bg-light: #f8fafc;
                --secondary-bg: #f4ede9;
            }
            
            * {
