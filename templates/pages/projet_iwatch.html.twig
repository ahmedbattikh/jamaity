{% extends 'base.html.twig' %}

{% block title %}Projet Iwatch - Jamaity{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container">
        <!-- Header Section -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 text-primary mb-3">
                    <i class="fas fa-eye me-3"></i>Projet Iwatch
                </h1>
                <p class="lead text-muted">Vers une dynamique locale de Redevabilité</p>
                <div class="badge bg-primary fs-6 mt-2">Phase évaluation projet Iwatch</div>
            </div>
        </div>

        <!-- Informations générales Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-info-circle me-3"></i>Informations générales
                        </h2>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building text-primary me-3"></i>
                                    <div>
                                        <h6 class="text-primary mb-1">Organisation</h6>
                                        <p class="mb-0">Jamaity</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-primary me-3"></i>
                                    <div>
                                        <h6 class="text-primary mb-1">Zone d'intervention</h6>
                                        <p class="mb-0">Tunis, Jendouba, Kasserine, Gafsa, Kebili, Medenine</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Objectif général Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-bullseye me-3"></i>Objectif général
                        </h2>
                        <p class="text-justify fs-5">
                            Jamaity a pour mission de renforcer la collaboration entre les associations locales en promouvant une dynamique d'échange et de synergie inter-associative. En facilitant l'évaluation et la collecte de retours des groupes cibles, Jamaity contribue à identifier les lacunes et à répondre aux besoins des associations partenaires de IWatch. Son action s'inscrit dans une logique d'amélioration continue des interventions de IWatch, visant à renforcer les capacités organisationnelles des associations afin d'assurer la durabilité des initiatives locales.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Objectifs spécifiques Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-target me-3"></i>Objectifs spécifiques
                        </h2>
                        <div class="row">
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; min-width: 50px;">
                                                <span class="fw-bold">1</span>
                                            </div>
                                            <h5 class="text-primary mb-0">Efficacité des procédures</h5>
                                        </div>
                                        <p class="card-text">Développer l'efficacité des procédures internes du programme de la société civile</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; min-width: 50px;">
                                                <span class="fw-bold">2</span>
                                            </div>
                                            <h5 class="text-primary mb-0">Stratégie de communication</h5>
                                        </div>
                                        <p class="card-text">Développer une Stratégie de communication et de valorisation des activités pour le projet et les activités des associations</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; min-width: 50px;">
                                                <span class="fw-bold">3</span>
                                            </div>
                                            <h5 class="text-primary mb-0">Renforcement des compétences</h5>
                                        </div>
                                        <p class="card-text">Renforcer les compétences des organisations locales de la société civile</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; min-width: 50px;">
                                                <span class="fw-bold">4</span>
                                            </div>
                                            <h5 class="text-primary mb-0">Collaborations inter-associations</h5>
                                        </div>
                                        <p class="card-text">Encourager des collaborations et des synergies inter-associations</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cibles directes Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body p-5">
                        <h2 class="h3 mb-4 text-center">
                            <i class="fas fa-users me-3"></i>Cibles directes
                        </h2>
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="bg-white bg-opacity-10 rounded p-4">
                                    <i class="fas fa-eye fa-3x mb-3"></i>
                                    <h5>I Watch</h5>
                                    <p class="mb-0">Organisation partenaire principale</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="bg-white bg-opacity-10 rounded p-4">
                                    <i class="fas fa-hands-helping fa-3x mb-3"></i>
                                    <h5>Équipe IAssist</h5>
                                    <p class="mb-0">Équipe de travail spécialisée</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="bg-white bg-opacity-10 rounded p-4">
                                    <i class="fas fa-sitemap fa-3x mb-3"></i>
                                    <h5>17 Associations</h5>
                                    <p class="mb-0">Associations partenaires du projet</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phases du projet Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-calendar-alt me-3"></i>Période de performance
                        </h2>
                        <div class="row">
                            <div class="col-lg-6 mb-4">
                                <div class="card border-success">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-play me-2"></i>Phase 1
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div>
                                                <h6 class="text-success mb-1">Début</h6>
                                                <p class="mb-0">24 Avril 2023</p>
                                            </div>
                                            <div>
                                                <h6 class="text-success mb-1">Fin</h6>
                                                <p class="mb-0">24 Juin 2023</p>
                                            </div>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                                        </div>
                                        <small class="text-muted mt-2 d-block">Durée: 2 mois</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-forward me-2"></i>Phase 2
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div>
                                                <h6 class="text-info mb-1">Début</h6>
                                                <p class="mb-0">22 Janvier 2024</p>
                                            </div>
                                            <div>
                                                <h6 class="text-info mb-1">Fin</h6>
                                                <p class="mb-0">22 Juillet 2024</p>
                                            </div>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 100%"></div>
                                        </div>
                                        <small class="text-muted mt-2 d-block">Durée: 6 mois</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Zone d'intervention Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-map me-3"></i>Zone d'intervention
                        </h2>
                        <div class="row">
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Tunis</h6>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Jendouba</h6>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Kasserine</h6>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Gafsa</h6>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Kebili</h6>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="text-center">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <h6 class="text-primary mb-0">Medenine</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approche et méthodologie Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h2 class="h3 text-primary mb-4">
                            <i class="fas fa-cogs me-3"></i>Approche et méthodologie
                        </h2>
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="text-center">
                                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                        <i class="fas fa-search fa-2x"></i>
                                    </div>
                                    <h5 class="text-primary">Évaluation</h5>
                                    <p class="text-muted">Collecte de retours des groupes cibles</p>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="text-center">
                                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                        <i class="fas fa-chart-line fa-2x"></i>
                                    </div>
                                    <h5 class="text-primary">Amélioration continue</h5>
                                    <p class="text-muted">Identification des lacunes et besoins</p>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="text-center">
                                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                        <i class="fas fa-handshake fa-2x"></i>
                                    </div>
                                    <h5 class="text-primary">Collaboration</h5>
                                    <p class="text-muted">Synergie inter-associative</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="row">
            <div class="col-12 text-center">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h3 class="text-primary mb-3">Participez au projet Iwatch</h3>
                        <p class="text-muted mb-4">Contribuez à la dynamique locale de redevabilité</p>
                        <a href="{{ path('app_contact') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Contactez-nous
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}